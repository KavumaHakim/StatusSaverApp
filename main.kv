<HomeScreen>:
	AnchorLayout:
		anchor_x: 'center' 
		anchor_y: 'center'
		padding: 20, 30
		BoxLayout:
			orientation: 'vertical'
			padding: [20, 70]
			spacing: 40
			MDCard:
				size_hint_y: .25
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				FloatLayout:
					Image:
						source:'whatsapp-icon.png'
						size_hint: (.2, .2)
						pos_hint: {'center_x': .1, 'center_y': .8}
					Label:
						text: 'Status Saver'
						color: 1, 1, 1, 1
						font_size: 80
						bold: True
						pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				theme_bg_color: 'Custom'
				md_bg_color: hex('#e0e0e0')
				on_release: root.change_screen('video_screen')
				Image:
					source: 'video-play-icon.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				theme_bg_color: 'Custom'
				md_bg_color: hex('#e0e0e0')
				on_release: root.change_screen('image_screen')
				Image:
					source: 'green_pic_icon.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .1
				ripple_behavior: True
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				on_release: root.open_whatsapp()
				Label:
					text: 'Open WhatApp'
					color: 1, 1, 1, 1
					font_size: 50
					bold: True



<ImageScreen>:
	FloatLayout:
		padding: 30

		RecycleView:
			id: view_port
			do_scroll_x: False
			size_hint_y: None
			height: (root.height - navigation.height - 50)
			pos_hint: {'bottom': 1}
			GridLayout:
				id: layout
				cols: 2
				padding: (15, 30)
				spacing: 30
				size_hint_y: None
				pos_hint: {'center_x': .5, 'center_y': .5}
				height: self.minimum_height

		MDIconButton:
			canvas.before:
				Color:
					rgba: hex('#05b025')
				RoundedRectangle:
					pos: self.pos
					size: self.size
					radius: [0, 50, 50, 0]
			icon: 'home'
			theme_icon_color: 'Custom'
			icon_color: hex('#ffffff')
			size_hint: (None, None)
			icon_size: 50
			height: 100
			width: 100
			pos_hint: {'top': .97, 'left': 1}
			on_release:
				root.loader.cancel() if root.loader else print()
				root.manager.transition.direction = 'right'
				root.manager.current = 'home'

		MDCard:
			id: navigation
			size_hint: .6, None
			height: 100
			radius: 50
			pos_hint: {'center_x': .5, 'top': .98}
			canvas.before:
				PushMatrix
				StencilPush
				RoundedRectangle:
					pos: self.pos
					size: self.size
					radius: self.radius  
				StencilUse
			canvas.after:
				StencilUnUse
				StencilPop
				PopMatrix
				Color:
					rgba: hex('#05b025')
				Line:
					width: 2  # Border thickness
					rounded_rectangle: (self.x, self.y, self.width, self.height, 50)
			BoxLayout:
				orientation: 'horizontal'
				SegmentedButton:
					id: all_tab_button
					text: '[b]All[/b]'
					markup: True
					size_hint: (1, 1)
					state: 'down'
					on_release: root.change_content('all_tab')
				SegmentedButton:
					id: saved_tab_button
					text: '[b]Saved[/b]'
					markup: True
					size_hint: (1, 1)
					on_release: root.change_content('saved_tab')



