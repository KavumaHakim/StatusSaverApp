<ImageViewer>:
	size_hint: (1, 1)
	auto_dismiss: True
	radius: 10
	overlay_color: (.5, .5, .5, .3)
	background_color: (1, 1, 1, .9)
	background: ''
	RelativeLayout:
		Image:
			id: view_img
			size_hint: (1, 1)
			source: root.image_source
		Widget: 
			pos_hint: {'bottom': 1, 'center_x': .5}
			size_hint: 1, None
			height: 80
			canvas:
				Color:
					rgba: (0, 0, 0, .4)
				RoundedRectangle: 
					pos: self.pos
					size: self.size
					radius: [0, 0, 0, 0]
		MDIconButton:
			icon: 'arrow-left'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			pos_hint: {'left': 1, 'top': 1}
			size_hint: (.2, None)
			height: 50
			on_release: root.contract()
		MDIconButton:
			icon: 'skip-previous'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .3}
			on_release: root.prev_img()
		MDIconButton:
			id: save_delete_icon
			icon: 'download' if root.is_saved == False else 'delete-empty'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .5}
			on_release: root.save_delete_img()
		MDIconButton:
			icon: 'skip-next'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .7}
			on_release: root.next_img()



<VideoPopup>:
	size_hint: (1, 1)
	auto_dismiss: True
	radius: 10
	overlay_color: (.5, .5, .5, .3)
	background_color: (1, 1, 1, .9)
	background: ''

	RelativeLayout:

		StatusVideo:
			id: video
			size_hint: (1, 1)
			source: root.video_source
			state: 'play'

		MDIconButton:
			icon: 'arrow-left'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.15, None)
			height: 40
			pos_hint: {'top': 1, 'left': 1}
			on_release: root.dismiss()

		ProgressBar:
			canvas.before:
				Color: 
					rgba: (.8, 1, .8, 1)
				Rectangle: 
					pos: self.pos
					size: self.size
			canvas: 
				Color: 
					rgba: (0, 1, 0, 1)
				Rectangle: 
					pos: self.pos
					size: (self.width*(self.value/float(self.max)), self.height)
			id: progress_bar
			max: 100
			value: root.progress
			pos_hint: {'top': .97, 'center_x': .5}
			size_hint_x: .7
			size_hint_y: None
			height: 4
			
		MDIconButton:
			id: save_delete_icon
			icon: 'download' if root.is_saved == False else 'delete-empty'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.15, None)
			height: 40
			pos_hint: {'top': 1, 'right': 1}
			on_release: root.save_delete_video()

		Widget: 
			pos_hint: {'bottom': 1, 'center_x': .5}
			size_hint: 1, None
			height: 80
			canvas:
				Color:
					rgba: (0, 0, 0, .4)
				RoundedRectangle: 
					pos: self.pos
					size: self.size
					radius: [0, 0, 0, 0]

		MDIconButton:
			icon: 'skip-previous'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .3}
			on_release: root.play_previous()

		MDIconButton:
			id: play_pause_button
			icon: 'play' if video.state=='pause' else 'pause'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .5}
			on_release: root.play_pause()

		MDIconButton:
			icon: 'skip-next'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: (.2, None)
			height: 80
			pos_hint: {'bottom': 1, 'center_x': .7}
			on_release: root.play_next()



<ImageCard>:
	size_hint_y: None
	height: 300
	style: 'filled'
	theme_bg_color: 'Custom'
	md_bg_color: (0, 0, 0, .05)
	on_release:
		src = self.children[0].source
		self.parent.parent.parent.parent.expand(src)


<VideoCard>:
	size_hint_y: None
	height: 300
	style: 'filled'
	theme_bg_color: 'Custom'
	md_bg_color: (0, 0, 0, .05)
	on_release:
		src = self.vid_src
		self.parent.parent.parent.parent.expand(src)


<SegmentedButton@ToggleButtonBehavior+MDFlatButton>:
	group: "segmented"
	theme_text_color: 'Custom'
	text_color: hex('#05b025')
	on_state:
		self.md_bg_color = hex('#05b025') if self.state == "down" else hex('#ffffff')
		self.text_color = hex('#ffffff') if self.state == "down" else hex('#05b025')